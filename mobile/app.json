{
  "expo": {
    "name": "AI Sport Coach",
    "slug": "ai-sport-coach",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.aisportcoach.app",
      "infoPlist": {
        "NSCameraUsageDescription": "AI Sport Coach needs camera access to analyze your workout posture in real-time."
      }
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "AI Sport Coach needs camera access to analyze your workout posture."
        }
      ]
    ],
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
